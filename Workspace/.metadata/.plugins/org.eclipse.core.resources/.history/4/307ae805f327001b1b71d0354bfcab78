package problemSolving;

public class CollatzPowerOfTwo {
	public static int Collatz(int num1){
		
		while (num1 != 1) {
			int num2 = num1 % 2;

			if (num2 == 0) {
				num1 = (num1 / 2);
			} else {
				num1 = (3 * num1 + 1);
			}
			
		}
		return num1;

	}
	public static void main(String [] args) {
		System.out.println(Collatz(110));
	}
}
