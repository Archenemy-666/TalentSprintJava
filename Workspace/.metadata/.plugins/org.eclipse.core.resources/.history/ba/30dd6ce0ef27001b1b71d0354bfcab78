package problemSolving;

public class FourDigitEvenPerfectNumber {
	public static void main(String[] args ) {
		int initial = 1000 ;
		int end = 9999 ;
		
		int [] perfectNumbers = perfectSquares(initial,end);
		System.out.println(evenCheck(perfectNumbers));
	}
	
	
	public static  int[] evenCheck(int [] array) {
		int []evenPerfects = new int[array.length];
		for(int i = 0 ; i < array.length ; i++) {
			while(array[i] % 2 == 0) {
				evenPerfects[i] = array[i] ; 
				i++ ;
			}
		}
		return evenPerfects;
		
	}
	
	public static  int[] perfectSquares(int initial , int end) {
		int len = (end - initial)+ 1 ;
		int [] perfectSq = new int[len];
		int index = 0;
		for(int i = initial ; i <= end ; i++) {
			
			if((int)Math.sqrt(i) == Math.sqrt(i)) {
				perfectSq[index] = i ;
				index ++ ;
			}
			
			
		}
		return perfectSq;
	}

}
